                                </div> 
                                <select name="estado">
                                    <option value="livre">Livre</option>
                                    <option value="ocupado">Ocupado</option>
                                    <option value="manutenção">Manutenção</option>
                                    <option value="limpeza" selected>Limpeza</option>
                                </select>
                                <input type='submit' value='Confirmar alterações' name='submit'>
                            </div> 
                        {% endif %}       
                    </form>
                {% endfor %}
                <div class="links">
                    <a href="./quartos.php">Voltar</a>
                    <a class="big" href="./src/add_quarto.php">Adicionar nova Acomodação</a>
                </div>
        </div>
    </div>
{% include "footer.twig" %}