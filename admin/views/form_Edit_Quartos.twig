                                <div class="organiza">
                                    <h1 class="num">N°{{quartos.id}}</h1>
                                    <h1>{{quartos.estado}}</h1>
                                    <div class="ocupado"></div>
                                </div>
                                <select name="estado">
                                    <option value="ocupado" selected>Ocupado</option>
                                    <option value="livre">Livre</option>
                                    <option value="manutenção">Manutenção</option>
                                    <option value="limpeza">Limpeza</option>
                                </select>
                                <input type='submit' value='Confirmar alterações' name='submit'>
                            </div> 
                        {% elseif quartos.estado == "manutenção" %}
                            <div id="organiza">
                                <div class="organiza">
                                    <h1 class="num">N°{{quartos.id}}</h1>
                                    <h1>{{quartos.estado}}</h1>
                                    <div class="manutencao"></div>
                                </div>
                                <select name="estado">
                                    <option value="livre">Livre</option>
                                    <option value="ocupado">Ocupado</option>
